!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------

Xft.dpi:                    96
Xft.antialias:              true
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintmedium
Xft.lcdfilter:              lcddefault

URxvt*termName:             rxvt-unicode
URxvt.depth:                32
URxvt.geometry:             90x30
URxvt.transparent:          false
URxvt.fading:               0
! URxvt.urgentOnBell:         true
! URxvt.visualBell:           true
URxvt.saveLines:            1000
URxvt.internalBorder:       3
URxvt.lineSpace:            0

! Fonts
URxvt.allow_bold:           true
! URxvt*font:                 xft:Inconsolata:pixelsize=15
! URxvt*boldFont:             xft:Inconsolata:pixelsize=15
URxvt*font:                 xft:Monaco:pixelsize=14
URxvt*boldFont:             xft:Monaco:pixelsize=14

!disable that annoying fucking iso shit on ctrl+shit
URxvt*iso14755:False

! Fix font space
! URxvt*letterSpace: -1

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Perl extensions
! URxvt.perl-ext:     
! URxvt.perl-ext-common:
! URxvt.matcher.button:       1
! URxvt.urlLauncher:          firefox

! Cursor
URxvt.cursorBlink:          true
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         true

! Colors
! Snazzy - Converted from https://github.com/sindresorhus/iterm2-snazzy
!          using https://github.com/richo/itermcolors2xdefaults
!All colors are in order (#)Light (#+8)Dark
!black
#define BLACK #131313
#define DARKBLACK #000000
URxvt*color0:   DARKBLACK
URxvt*color8:   BLACK
!Red
#define RED #ff5c57
#define DARKRED #800000
URxvt*color1:   DARKRED
URxvt*color9:   RED
!Green
#define GREEN #09c347
#define DARKGREEN #03491b
URxvt*color2:   DARKGREEN
URxvt*color10:   GREEN
!Yellow
#define YELLOW #e7f33f
#define DARKYELLOW #434805
URxvt*color3:   DARKYELLOW
URxvt*color11:   YELLOW
!Blue
#define BLUE #0066ff
#define DARKBLUE #001f4d
URxvt*color4:   DARKBLUE
URxvt*color12:   BLUE
!Magenta
#define MAGENTA #ff6ac1
#define DARKMAGENTA #800042
URxvt*color5:   DARKMAGENTA
URxvt*color13:   MAGENTA
!Cyan
#define CYAN #03d3fc
#define DARKCYAN #013f4c
URxvt*color6:   DARKCYAN
URxvt*color14:   CYAN
!White
#define WHITE #f2f2f2
#define DARKWHITE #e4e4e4
URxvt*color7:   DARKWHITE
URxvt*color15:   WHITE

!Old shit of unknown origin
#define FG #eff0eb
#define BG #282a36
URxvt*foreground:   FG
URxvt*background:   BG

URxvt*cursorColor:  DARKWHITE



!Rofi colors
! State:           'bg',    'fg',   'bgalt',    'hlbg',     'hlfg'
rofi.color-normal: BG,      FG,     BLACK,      BLUE,       BLACK
rofi.color-urgent: BG,      FG,     BLACK,      BLUE,       DARKWHITE 
rofi.color-active: BG,      FG,     BLACK,      BLUE,       DARKWHITE 

!                  'background', 'border', 'separator'
rofi.color-window: BG,              BG,             FG
!
